# App Configuration
APP_NAME=ShopAbell
APP_URL=http://localhost:3000
APP_DESCRIPTION=Transform Your Live Selling Business

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/shopabell
DIRECT_URL=postgresql://user:password@localhost:5432/shopabell

# Supabase
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-key

# Cloudinary (for AI image processing)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# JWT Secret
JWT_SECRET=your-jwt-secret-key

# API Service Flags (set to false for emulation)
USE_REAL_DECENTRO=false
USE_REAL_SHIPROCKET=false
USE_REAL_WHATSAPP=false

# Emulated Service Config
WHATSAPP_WEBHOOK_URL=http://localhost:3000/api/webhooks/whatsapp
DECENTRO_WEBHOOK_URL=http://localhost:3000/api/webhooks/decentro
SHIPROCKET_WEBHOOK_URL=http://localhost:3000/api/webhooks/shiprocket

# Virtual Account Settings
VIRTUAL_ACCOUNT_PREFIX=SHOP
UPI_HANDLE=@shopabell

# Shipping Settings
DEFAULT_SHIPPING_CHARGE=70
ACTUAL_SHIPPING_COST=45

# Platform Settings
PLATFORM_FEE_PERCENTAGE=3
ADMIN_COMMISSION_PERCENTAGE=0.5
CHECKOUT_TIMEOUT_MINUTES=15

# Development Settings
NODE_ENV=development
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# When ready for production, change to:
# USE_REAL_DECENTRO=true
# DECENTRO_CLIENT_ID=your-client-id
# DECENTRO_CLIENT_SECRET=your-client-secret
