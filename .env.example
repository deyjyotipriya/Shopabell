# Copy this file to .env.local and fill in your values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# JWT Secret - Generate a random string (min 32 characters)
# You can use: openssl rand -base64 32
JWT_SECRET=your-secret-key-here

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Cloudinary (Optional - using client-side processing)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=demo
CLOUDINARY_API_KEY=not-needed
CLOUDINARY_API_SECRET=not-needed

# Google AI (Optional - using TensorFlow.js)
GOOGLE_AI_API_KEY=not-needed

# WhatsApp Business API (Using emulator for demo)
WHATSAPP_API_TOKEN=demo-token
WHATSAPP_PHONE_NUMBER_ID=123456789
WHATSAPP_BUSINESS_ACCOUNT_ID=123456789
WHATSAPP_WEBHOOK_URL=http://localhost:3000/api/webhooks/whatsapp
WHATSAPP_WEBHOOK_VERIFY_TOKEN=shopabell-webhook-token

# Payment Gateway - Decentro (Using emulator for demo)
DECENTRO_API_KEY=demo-key
DECENTRO_API_SECRET=demo-secret
DECENTRO_PROVIDER_SECRET=demo-provider-secret
DECENTRO_MODULE_SECRET=demo-module-secret

# Shipping - Shiprocket (Using emulator for demo)
SHIPROCKET_EMAIL=demo@shopabell.com
SHIPROCKET_PASSWORD=demo-password

# Node Environment
NODE_ENV=development